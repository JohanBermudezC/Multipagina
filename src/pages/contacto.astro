---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import { Icon } from "astro-icon/components";

const buttons = [{name:"Aceptar"}, {name:"enviar"}, {name:"cancelar"}, {name:"otro"}];
---

<Layout title=" Contacto">
    <div class="m-10">
        Formulario de contacto
        <Button del="true">
            <span slot="text"> Boton 1 </span>

            <svg
                slot="star-icon"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-4"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"
                ></path>
            </svg>
        </Button>
        <Button />
    </div>

    <div class="ml-10">
        <Icon name="image" size="56" class="text-lime-500" />
        <Icon name="mdi:account-cowboy-hat" size={56} />
        <Icon name="svg-spinners:clock" size={56} />
    </div>

    {
        buttons.map((text) => {
            return <Button><span slot="text">{text.name}</span></Button>
        })
    }
</Layout>
